<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ExpenseActivity"
    android:background="@color/colorPrimary">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar.AppBarOverlay"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guidelineLeftParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/leftGuideLine" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineCenterParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/centerGuideLine" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineRightParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/rightGuideLine" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="@dimen/cardview_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRightParent"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeftParent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <android.support.constraint.Guideline
                android:id="@+id/guidelineLeftCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="@dimen/leftGuideLine" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineCenterCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="@dimen/centerGuideLine" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineRightCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="@dimen/rightGuideLine" />

            <ImageView
                android:id="@+id/imageViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/view_expense_icon_date"
                android:src="@drawable/ic_today"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayoutDate"
                app:layout_constraintStart_toStartOf="@+id/guidelineLeftCardView"
                app:layout_constraintTop_toTopOf="@+id/linearLayoutDate" />

            <LinearLayout
                android:id="@+id/linearLayoutDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:background="#f1f1f1"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/guidelineRightCardView"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imageViewTitle"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/view_expense_date"
                    android:textAlignment="textStart"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:singleLine="true"
                    android:textSize="16sp"/>

                <android.support.v4.view.ViewPager
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="@color/colorAccent" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/view_expense_icon_title"
                android:src="@drawable/ic_create"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayoutTitle"
                app:layout_constraintStart_toStartOf="@+id/guidelineLeftCardView"
                app:layout_constraintTop_toTopOf="@+id/linearLayoutTitle" />

            <LinearLayout
                android:id="@+id/linearLayoutTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="#f1f1f1"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/guidelineRightCardView"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imageViewTitle"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutDate">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/view_expense_title"
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:background="@null"
                    android:hint="@string/view_expense_title_hint"
                    android:maxLength="30"
                    android:inputType="textPersonName"
                    android:singleLine="true"
                    android:textSize="16sp" />

                <android.support.v4.view.ViewPager
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="@color/colorAccent" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/view_expense_icon_description"
                android:src="@drawable/ic_description"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayoutDescription"
                app:layout_constraintStart_toStartOf="@+id/guidelineLeftCardView"
                app:layout_constraintTop_toTopOf="@+id/linearLayoutDescription" />

            <LinearLayout
                android:id="@+id/linearLayoutDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:background="#f1f1f1"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/guidelineRightCardView"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imageViewDescription"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutTitle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/view_expense_description"
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:inputType="text"
                    android:maxLength="30"
                    android:hint="@string/view_expense_description_hint"
                    android:background="@null"
                    android:textSize="16sp" />

                <android.support.v4.view.ViewPager
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="@color/colorAccent" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/view_expense_icon_price"
                android:src="@drawable/ic_money"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayoutPrice"
                app:layout_constraintStart_toStartOf="@+id/guidelineLeftCardView"
                app:layout_constraintTop_toTopOf="@+id/linearLayoutPrice" />

            <LinearLayout
                android:id="@+id/linearLayoutPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="#f1f1f1"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayoutParcels"
                app:layout_constraintEnd_toStartOf="@+id/guidelineCenterCardView"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imageViewExpense"
                app:layout_constraintTop_toTopOf="@+id/linearLayoutParcels">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/view_expense_price"
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:inputType="numberDecimal"
                    android:layout_marginTop="4dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:maxLength="8"
                    android:hint="@string/view_expense_price_hint"
                    android:textSize="16sp" />

                <android.support.v4.view.ViewPager
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="@color/colorAccent" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewInstallments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/view_expense_icon_installments"
                android:src="@drawable/ic_credit_card"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayoutParcels"
                app:layout_constraintStart_toStartOf="@+id/guidelineCenterCardView"
                app:layout_constraintTop_toTopOf="@+id/linearLayoutParcels" />

            <LinearLayout
                android:id="@+id/linearLayoutParcels"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:background="#f1f1f1"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/guidelineRightCardView"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imageViewInstallments"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutDescription">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/view_expense_installments"
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinnerInstallments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="3dp"
                    android:textSize="16sp" />

                <android.support.v4.view.ViewPager
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="@color/colorAccent" />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/accent_background"
        android:drawableStart="@drawable/ic_clear"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:singleLine="true"
        android:text="@string/view_expense_button_cancel"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toStartOf="@+id/guidelineCenterParent"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeftParent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/accent_background"
        android:drawableStart="@drawable/ic_check"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:singleLine="true"
        android:text="@string/view_expense_button_save"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRightParent"
        app:layout_constraintStart_toStartOf="@+id/guidelineCenterParent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

</android.support.constraint.ConstraintLayout>

</ScrollView>